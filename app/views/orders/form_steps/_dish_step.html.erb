<%= render "shared/error_messages", object: order if order.errors.any? %>
<div class="form-group">
<div class="field">
<% @dishes.each do |dish| %>
  <%= image_tag(dish.image_dish.url) if dish.image_dish %>
  <%= check_box_tag 'dish_ids[]', dish.id -%>
  <%= number_field :people, class: "form-control" %>
  <% end %> 
  </div>  
</div>


<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10 row">

  <div class="form-group">
  <div class="col-sm-offset-2 col-sm-10 row">

    <div class="col-sm-6 text-left">
      <div class="previous">
      <button type="button" class="btn btn-primary js-button-pre" data-step-index="2">
          Previous Step
        </button>
      </div>
    </div>
    <div class="col-sm-6 text-right">   
      <div class="next">
        <%= form.submit "Done", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div

  